<Window x:Class="DOY.Pages.Edit.WindowAddGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DOY.Pages.Edit"
        mc:Ignorable="d"
        Title="Добавление группы" Height="250" Width="450" ResizeMode="NoResize"
        Icon="/Resource/WindowAdd.png">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFA05F5C"/>
                <GradientStop Color="#FFFC744A" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>


        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                    Visibility="Visible">

            <StackPanel>
                <TextBlock Text="Название" Margin="-10 0 0 0"
                                   Foreground="AliceBlue"/>
                <TextBox Height="30" Width="200" MaxLength="30"
                                 x:Name="txbName"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Номер кабинета" Margin="-10 0 0 0"
                                   Foreground="AliceBlue"/>
                <TextBox Height="30" Width="200" MaxLength="10"
                                 x:Name="txbCab"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Номер этажа" Margin="-10 0 0 0"
                                   Foreground="AliceBlue"/>
                <TextBox Height="30" Width="200" MaxLength="10"
                                 x:Name="txbfloor"/>
            </StackPanel>
            <Button Height="30" Width="175" Content="Добавить"
                    x:Name="btnAdd" Margin="0 10 0 0" Click="btnAdd_Click" />
        </StackPanel>
      
    </Grid>
</Window>
